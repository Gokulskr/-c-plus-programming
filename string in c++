#include<iostream>
#include<string>
using namespace std;
int main()
{
	string s1="Hello world";
	char a[]={'H','A','I'};
	string s2=string(a);
	cout<<"The string s1 is:"<<s1;
	cout<<"The string s2 is:"<<s2;
	return 0;
}

